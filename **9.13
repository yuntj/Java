
import java.util.Scanner;
public class Test {
    public int row,column;
    public double maxValue;
    public static Test locateLargest(double[][] a){
    	Test my=new Test();
        my.maxValue=a[0][0];
        for(int i=0;i<a.length;i++){
            for(int j=0;j<a[0].length;j++){
                if(a[i][j]>my.maxValue){
                    my.maxValue=a[i][j];
                    my.row=i;
                    my.column=j;
                }
            }
        }
        return my;
    }
    public static void main(String[] args){
        Scanner input=new Scanner(System.in);
        System.out.print("Enter the number of rows and columns in the array: ");
        int r=input.nextInt(),c=input.nextInt();
        System.out.println("Enter the array: ");
        double array[][]=new double[r][c];
        for(int i=0;i<r;i++)
            for(int j=0;j<c;j++)
                array[i][j]=input.nextDouble();
        Test my=Test.locateLargest(array);
        System.out.print("The location of the largest element is "+my.maxValue+" at ("+my.row+"ï¼Œ"+my.column+")");
    }
}
